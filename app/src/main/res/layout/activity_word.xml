<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.peter.vladimir.concordance.WordActivity"
    android:background="#68b8ff"
    android:padding="5dp"
    android:gravity="center_horizontal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_search_word"
            android:hint="Enter word or phrase"
            android:layout_weight="8" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibtn_search_word"
            android:background="@android:drawable/ic_menu_search"
            android:layout_weight="1" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_source"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#dcdcdc"
        android:layout_marginTop="5dp">

        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/lv_texts_in_words"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="5" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/lay_source">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/et_line_in_source"
                android:hint="Line"
                android:layout_weight="1"
                android:textSize="7pt"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:background="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/et_word_in_sorce"
                android:hint="Word in line"
                android:layout_weight="1"
                android:textSize="7pt"
                android:layout_margin="5dp"
                android:background="#ffffff"
                android:inputType="phone" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found Information"
        android:id="@+id/tv_word_data_info"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_marginTop="5dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_found_words"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff" />


</LinearLayout>
