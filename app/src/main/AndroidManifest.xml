<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peter.vladimir.concordance" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewTextActivity"
            android:label="@string/title_activity_view_text" >
        </activity>
        <activity
            android:name=".WordActivity"
            android:label="@string/title_activity_word" >
        </activity>
        <activity
            android:name=".GroupsActivity"
            android:label="@string/title_activity_groups" >
        </activity>
        <activity
            android:name=".IndexActivity"
            android:label="@string/title_activity_index" >
        </activity>
        <activity
            android:name=".StatisticActivity"
            android:label="@string/title_activity_statistic" >
        </activity>
    </application>

</manifest>
